                  </svg>
                  </button>
                </div>
                <h4>Total: $<%= item.plant.price * item.quantity%></h4>
              </div>
            </div>
          <% }) %>
          <% let subtotal = cart.reduce((total, item) => total + (item.plant.price * item.quantity), 0).toFixed(2); %>
          <div class="subtotal">
            <h2>Cart Subtotal: $<%= subtotal %></h2>
          </div>
          <button id="checkout">Checkout</button>
